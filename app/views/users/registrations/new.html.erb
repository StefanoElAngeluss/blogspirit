<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <%= invisible_captcha %>

  <div class="field">
    <%= f.label "Nom d'utilisateur (login)" %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Avatar Utilisateur:" %>
    <%= f.file_field :avatar, accept: "image/png, image/gif, image/jpeg", required: true, class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Numéro de votre rue" %><br />
    <%= f.text_field :street_number, autocomplete: "street_number", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Nom de votre rue" %><br />
    <%= f.text_field :street_name, autocomplete: "street_name", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Ville" %><br />
    <%= f.text_field :city, autocomplete: "city", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Code Postale" %><br />
    <%= f.text_field :zipcode, autocomplete: "zipcode", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Pays" %><br />
    <%= f.text_field :country, autocomplete: "country", required: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Mot de passe" %><br>
    <%= f.password_field :password, autocomplete: "password", required: true, class: "form-control" %>
    <% if @minimum_password_length %>
    <em class="text-danger">(minimum <%= @minimum_password_length %> caractères )</em>
    <% end %><br />
  </div>

  <div class="field">
    <p>
      <%= f.label "Confirmation du mot de passe" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "confirm-password", required: true, class: "form-control" %>
    </p>
  </div>

  <div class="actions">
    <p>
      <%= f.submit "Sign up", class: "btn btn-success" %>
    </p>
  </div>
<% end %>

<%= render "users/shared/links" %>
