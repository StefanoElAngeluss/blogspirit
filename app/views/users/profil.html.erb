<div class="container">
  <div class="row">
    <div class="col-5 m-auto">
      <div class="card">
        <img class="card-img-top" src="holder.js/100x180/" alt="">
        <div class="card-body">
          <h1 align="center" class="text-uppercase">Mon Profil</h1>
          <hr>
          <p class="card-text">
            <h3 class=text-success>Manuel:</h3>
            <b>Nom d'utilisateur: </b><%= current_user.username %>
            <br>
            <b>Adresse Email: </b><%= current_user.email %>
            <br>
            <b>Ville: </b><%= current_user.city %>
            <br>
            <b>Code Postale: </b><%= current_user.zipcode %>
            <br>
            <b>Pays: </b><%= current_user.country %>
            <br>
            <hr>
            <h3 class=text-success>RÃ©seau Social:</h3>
          <% if current_user.provider.present? %>
            <b>Nom: </b><%= current_user.name %>
            <br>
            <b>Provider: </b><%= current_user.provider %>
            <br>
            <b>Image: </b><%= current_user.image %>
            <br>
            <b>UID: </b><%= current_user.uid %>
          <% else %>
            <b>Provider: </b> Inscription manuel par Email
            <br>
            <b>UID: </b> Pas Necessaire
          <% end %>
          </p>
        </div>
        <div class="card-footer">
          <h4 class="card-title"><span class="text-primary">Adresse Email: </span> <%= current_user.email %></h4>
        </div>
      </div>
    </div>
  </div>
</div>