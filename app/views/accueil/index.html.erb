<h1>Accueil#index</h1>
<p>Find me in app/views/accueil/index.html.erb</p>

<% if user_signed_in? %>
  <%= link_to "logout", destroy_user_session_path, :method => 'delete' %>
<% else %>
  <%= link_to "Login", new_user_session_path, :method => 'get' %>
<% end %>
<hr>

<div class="container">
  <div class="row">
    <div class="col-7">
      <div class="card">
        <img class="card-img-top" src="holder.js/100x180/" alt="">
        <div class="card-body">
          <h4 class="card-title"><%= current_user.email %></h4>
          <hr>
          <p class="card-text">
          <% if current_user.provider.present? %>
            <b>Provider: </b><%= current_user.provider %>
            <br>
            <b>UID: </b><%= current_user.uid %>
          <% else %>
            <b>Provider: </b> Inscription manuel par Email
            <br>
            <b>UID: </b> Pas Necessaire
          <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-5">
      <a href="https://www.publish0x.com?a=open5EoYd7"><img src="https://cdn.publish0x.com/prod/fs/images/a0679e71555febf07f3c7ef39adfa3df87188e0c79e219af8318a84de7c37345.gif" width="500" height="250" /></a>
    </div>
  </div>
</div>


